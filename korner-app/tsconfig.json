{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
        "@app/env": [
            "src/environments/environment"
        ],
        "@app/*": [
            "src/app/*"
        ],
        "@core/*": [
            "src/core/*"
        ],
    },
    "sourceMap": true,
    "typeRoots": [
        "node_modules/@types"
    ],
    "target": "es5",
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/test.ts",
    "src/mocks.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
